<%- layout('boilerplate/boilerplate') -%>
<main>
  <section id="menus-form">
    <h1 class="text-center">Edit Menu</h1>
    <form action="/admin/menu/<%= menu._id %>?_method=PATCH" method="post" enctype="multipart/form-data" class="menu-admin">
      <div class="mb-3 title">
        <label for="title" class="form-label">Title</label>
        <input type="text" class="form-control" id="title" name="title" autocomplete="off" value="<%= menu.title %>">
      </div>
      <div class="mb-3 menu">
        <label for="date" class="form-label">Date</label>
        <input type="date" name="date" id="date" min="<%= minDate %>" max="<%= maxDate %>" value="<%= menuDate %>">
      </div>
      <div class="mb-3 images">
        <label for="images" class="form-label">Add Images</label>
        <input type="file" class="form-control" id="images" name="images" accept=".jpeg, .jpg, .png, .gif, .svg" multiple>
      </div>
      <div class="mb-3">
        <% menu.images.forEach(function(img, i) { %>
          <img src="<%= img.cbImg %>" alt="" class="cbImg">
          <div class="form-check-inline">
            <input class="form-check-input" type="checkbox" value="<%= img.filename %>" id="image-<%= i %>" name="deleteImg[]">
            <label class="form-check-label" for="image-<%= i %>">Delete</label>
          </div>
        <% }) %> 
      </div>
      <div class="mb-3 description">
        <label for="description" class="form-label">Description</label>
        <textarea class="form-control" id="description" name="description" rows="3"><%= menu.description %></textarea>
      </div>
      <div class="mb-3 button">
        <button class="btn btn-success">Edit</button>
      </div>
    </form>
    <div class="mb-3 button">
      <a href="/admin" class="btn btn-danger">Cancel</a>
    </div>
  </section>
</main> 