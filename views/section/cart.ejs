<%- layout('boilerplate/boilerplate') -%>
<main>
  <section id="order-cart" class="mb-5 container">
    <%- include('../partials/flash') %>
    <h1 class="text-center">Orders Cart</h1>
    <div class="row">
      <% if(carts){ %>
      <% for(let cart of carts){ %> 
      <div class="col-sm-6">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= cart.menuTitle %></h5>
            <p class="card-text">Date : <%= cart.menuDate %></p>
            <p class="card-text">Quantity : <%= cart.quantity %></p>
            <p class="card-text">Message: <%= cart.message %></p>
            <p class="card-text">Total Prices : <%= cart.totalPrices %></p>
            <a href="/cart/<%= cart.id %>" class="btn btn-success">Checkout</a>
            <form action="/cart?_method=DELETE&id=<%= cart.id %>" method="post">
              <button class="btn btn-danger">Cancel</button>
            </form>
          </div>
        </div>
      </div>
      <% } %> 
      <% } %> 
    </div>
  </section>
</main>