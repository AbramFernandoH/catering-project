<%- layout('boilerplate/boilerplate') -%>
<main>
  <section id="register-main">
    <%- include('../partials/flash') %>
    <h1 class="text-center">Register</h1>
    <form action="/register" method="post" class="register-form">
      <div class="mb-3 register-fullname">
        <label for="fullname" class="form-label">Full Name</label>
        <input type="text" name="fullname" id="fullname" class="form-control" autocomplete="off" placeholder="Full Name for payment info">
      </div>
      <div class="mb-3 register-username">
        <label for="username" class="form-label">Username</label>
        <input type="text" name="username" id="username" class="form-control" autocomplete="off">
      </div>
      <div class="mb-3 register-email">
        <label for="email" class="form-label">Email</label>
        <input type="email" name="email" id="email" class="form-control" autocomplete="off">
      </div>
      <div class="mb-3 register-mobile-number">
        <label for="mobile-num" class="form-label">Mobile Number</label>
        <input type="text" name="mobileNumber" id="mobile-num" class="form-control" autocomplete="off" placeholder="e.g +6281234567890">
      </div>
      <div class="mb-3 register-password">
        <label for="password" class="form-label">Password</label>
        <input type="password" name="password" id="password" class="form-control">
      </div>
      <div class="mb-3 register-confirm-password">
        <label for="confirm-password" class="form-label">Confirm Password</label>
        <input type="password" name="confirmPassword" id="confirm-password" class="form-control">
      </div>
      <div class="mb-3 register-province">
        <label for="province" class="form-label">Province</label>
        <input type="text" name="addresses[province]" id="province" rows="3" class="form-control" placeholder="e.g Daerah Khusus Ibukota Jakarta" autocomplete="off">
      </div>
      <div class="mb-3 register-city">
        <label for="city" class="form-label">City</label>
        <input type="text" name="addresses[city]" id="city" rows="3" class="form-control" placeholder="e.g Kota Jakarta Pusat" autocomplete="off">
      </div>
      <div class="mb-3 register-postalCode">
        <label for="postalCode" class="form-label">Postal Code</label>
        <input type="text" name="addresses[postalCode]" id="postalCode" class="form-control" placeholder="e.g 10110" autocomplete="off">
      </div>
      <div class="mb-3 register-streetLine1">
        <label for="streetLine1" class="form-label">Street Line 1</label>
        <textarea name="addresses[streetLine1]" id="streetLine1" rows="3" class="form-control" placeholder="e.g Jalan Merdeka Barat No.1"></textarea>
      </div>
      <div class="mb-3 register-streetLine2">
        <label for="streetLine2" class="form-label">Street Line 2</label>
        <textarea name="addresses[streetLine2]" id="streetLine2" rows="3" class="form-control" placeholder="e.g Kecamatan Gambir"></textarea>
      </div>
      <div class="mb-3 register-btn">
        <button class="btn btn-success">Register</button>
      </div>
    </form>
    <h6>Already have an account? <a href="login.html">login</a></h6>
  </section>
</main>