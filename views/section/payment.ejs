<%- layout('boilerplate/boilerplate') -%>
<main>
  <section id="choose-payment-method">
    <div class="mt-5 pt-5">
        
    <form action="/payment?paymentMethod=<%= method %>&cartId=<%= cart.id %>" method="post">
      <h3>E - Wallet</h3>
      <% for(let pm of eWalletPMs){ %>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="eWallet" value="ID_<%= pm %>" id="<%= pm %>_ew">
          <label class="form-check-label" for="<%= pm %>_ew"><%= pm %></label>
        </div>
      <% } %>
      <button class="btn btn-success">Submit</button>
    </form>


    </div>
  </section>

  <%- include('../partials/cantGoBack') %> 
</main>